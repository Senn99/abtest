<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ss.abtest.mapper.UserMapper">
    <insert id="addUser" useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
        insert into user(name, sex, email, password, status, create_time, update_time)
        values (#{name}, #{sex}, #{email}, #{password}, #{status}, #{createTime}, #{updateTime})
    </insert>
    <select id="getUserById" resultType="com.ss.abtest.pojo.domain.User">
        select *
        from user
        where user_id = #{id};
    </select>
    <select id="getUserByEmail" resultType="com.ss.abtest.pojo.domain.User">
        select *
        from user
        where email = #{email};
    </select>
    <select id="listCompanyUsers" resultType="com.ss.abtest.pojo.domain.User">
        select *
        from user
        where company_id = #{companyId} limit #{page}
            , #{limit}
    </select>
    <select id="countCompanyUsers" resultType="java.lang.Integer">
        select count(1)
        from user
        where company_id = #{companyId}
    </select>
</mapper>
